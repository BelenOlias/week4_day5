<div class="container">


    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Editar libro {{title}}</h1>

            <form action="/libros/editar/{{_id}}" method="post">

                <div class="form-group">
                    <label>Título</label>
                    <input name="title" type="text" class="form-control" value="{{title}}">
                </div>

                <div class="form-group">
                    <label>Descripción</label>
                    <input name="description" type="text" class="form-control" value="{{description}}">
                </div>

                <div class="form-group">
                    <label>Autor/a</label>
                    <input name="author" type="text" class="form-control" value="{{author}}">
                </div>

                <div class="form-group">
                    <label>Puntuación</label>
                    <input name="rating" type="text" class="form-control" value="{{rating}}">
                </div>

                <button type="submit" class="btn btn-dark">Guardar edición</button>
            </form>
        </div>
    </div>
</div>